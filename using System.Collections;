using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.UI;

public class GravityGun : MonoBehaviour
{
    public Camera mainCamera;
    public float maxGrabDist = 10f;
    public float throwForce = 20f;
    public float lerpSpeed = 10f;
    public Transform objectHolder;
    public Transform point;

    public Rigidbody grabbedRB;

    public void grabObject()
    {
        if(grabbedRB)
        {
            grabbedRB.isKinematic = false;
            grabbedRB = null;
        }
        else
        {
            RaycastHit hit;
            Ray ray = mainCamera.ScreenPointToRay(new Vector3(Screen.width/2, Screen.height/2, 0));
            Debug.DrawRay(ray.origin, ray.direction * 20f, Color.red);
            if(Physics.Raycast(ray, out hit, maxGrabDist))
            {
                point.position = hit.point;
                grabbedRB = point.Collider.gameObject.GetComponent<Rigidbody>();
                if(grabbedRB)
                {
                    grabbedRB.isKinematic = true;
                }
            }
        }
    }

    public void gD()
    {
        grabbedRB.isKinematic = false;
        grabbedRB.AddForce(mainCamera.transform.forward * throwForce, ForceMode.VelocityChange);
        grabbedRB = null;
    }

    void Update()
    {
        if(grabbedRB)
        {
            grabbedRB.MovePositoin(Vector3.Lerp(grabbedRB.position, objectHolder.transform.position, Time.deltaTime * lerpSpeed));
        }
    }
}
